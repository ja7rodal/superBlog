<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title %></h1>
      <%= form_for @post do |f| %>



      <% if post.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">

          <ul>
            <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <% end %>


      <div class="form-group">
        <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo del post" %>
      </div>

      <div class="form-group">
        <%= f.text_area :body, class: "form-control input-lg", placeholder: "Ingresa el post", size: "60x12" %>
      </div>
      <div>
        <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
