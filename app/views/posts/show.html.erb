
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= link_to 'Volver' , posts_path %>

      <div class="post-page">
        <header class="post-header">
          <h1><%= @post.title %></h1>
          <p class="text-justify"><%= markdown(@post.body) %></p>
        </header>

        <div class="comments">
          <h2>Comentarios</h2>
          <% @post.comments.each do |comment| %>
          <div class="panel panel-default">
            <header class="panel-heading"><%= comment.user.email %></header>
            <div class="panel-body"><%= markdown(comment.body) %></div>
          </div>
          <% end %>

            <% if signed_in? %>
            <%= form_for [@post, @post.comments.build] do |f| %>
            <div class="form-group">
              <%= f.text_area :body, class: "form-control", placeholder: "Agregar comentario" %>
            </div>

            <div class="actions text-right">
              <%= f.submit "Comentar", class: "btn btn-primary" %>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
