
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= link_to 'Volver' , posts_path %>

      <div class="product-page">
        <header class="product-header">
          <h1><%= @post.title %></h1>
          <p class="text-justify"><%= markdown(@post.body) %></p>
        </header>

        <div class="comments">
          <h2>Comentarios</h2>
        </div>
      </div>

    </div>
  </div>
</div>
