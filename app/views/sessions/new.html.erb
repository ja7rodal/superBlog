<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Ingresar</h1>

      <%= form_tag controller: :sessions, action: :create do %>
      <% if flash[:notice] %>
      <div class="alert alert-danger">
        <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: name %>
        <% end -%>

      </div>

      <% end %>
      <div class="form-group">
        <%= label_tag(:email, "Email") %>
        <%= email_field_tag(:email, nil, class: 'form-control input-lg') %>
      </div>
      <div class="form-group">
        <%= label_tag(:password, "Password") %>
        <%= password_field_tag(:password, nil, class: 'form-control input-lg') %>
      </div>
      <div class="text-right"><%= submit_tag("Ingresar", class: 'btn btn-primary btn-lg btn-block') %></div>
      <% end %>
    </div>
  </div>
</div>
