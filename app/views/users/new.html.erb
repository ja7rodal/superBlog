<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Crear Cuenta</h1>

      <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: "form-control input-lg", placeholder: "ContraseÃ±a" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "Confirmar" %>
      </div>

      <div class="form_group">
        <%= f.submit class: "btn btn-primary btn-block btn-lg", value:"Crear Usuario" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
